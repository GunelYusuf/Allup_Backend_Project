@model Brand

<h1>Create</h1>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="contact-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @foreach (var item in ViewBag.IsMainCategory)
            {
                <div class="d-flex align-items-stretch">
                    <div class="form-group form-check d-flex">
                        <h5>@item.Name</h5>
                    </div>
                </div>
                @foreach (var itemsub in ViewBag.SubCategory)
                {
                    @if (itemsub.Parent.Id == item.Id)
                    {
                        <div class="form-group form-check d-flex">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input subcategory" name="subcategories" value="@itemsub.Id" />@itemsub.Name
                            </label>
                        </div>
                    }
                }

            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-" />
                <button asp-action="Index" class="btn btn-outline-warning"> Go Back</button>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial">
}
