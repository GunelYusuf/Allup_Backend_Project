@model IEnumerable<Allup_Backend.Models.Contact>

<div class="col-lg-6 grid-margin stretch-card">
   <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Table</h4>
            <p class="card-description">
                <a class="btn btn-primary" asp-controller="Contact" asp-action="Create"> Create Contact</a>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Open Close Clocks</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Address</td>
                      
                        <td>
                            <a asp-controller="Contact" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">
                                <i class="icon-info"></i>
                            </a>

                            <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="icon-magnifier-remove"></i>
                            </a>
                            <a asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">
                             Update
                            </a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
 </div>
