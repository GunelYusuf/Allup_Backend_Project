@model HomeSlider


@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/assets/images/product/@Model.ImageUrl" />
        </div>
        <div class="col-6">
            <p>@Model.Title</p>
            <p>@Model.Description</p>
        </div>
        <div class="col-6">
            <a asp-controller="HomeSlider" asp-action="Index" class="btn btn-warning" style="color:white">Go Back</a>
        </div>
        <form class="forms-sample mt-3" method="Post">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

