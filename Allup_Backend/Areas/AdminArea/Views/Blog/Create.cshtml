@model Blog
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Create Blog</p>
                    <form class="forms-sample" method="Post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Photo">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <textarea class="form-control" asp-for="Title" placeholder="Title"></textarea>
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date"></label>
                            <textarea class="form-control" asp-for="Date" placeholder="Date"></textarea>
                            <span class="text-danger" asp-validation-for="Date"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Product.ProductTags" class="form-label">Tags</label>
                            <select asp-for="@Model.Product.ProductTags" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))" class="form-control">
                                <option value="0">Please Select</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button asp-action="Index" class="btn btn-outline-warning"> Go Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
